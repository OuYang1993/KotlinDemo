<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size android:width="4dp" android:height="4dp" />
            <solid android:width="1px" android:color="@color/material_blue_500" />
            <stroke android:width="1px" android:color="@color/material_blue_500" />
        </shape>

    </item>
    <item>
        <shape>
            <size android:width="4dp" android:height="4dp" />
            <stroke android:width="1px" android:color="@color/material_grey_400" />
        </shape>
    </item>
</selector>